<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ExpenseTrakingApp.Models"
             x:Class="ExpenseTrakingApp.ExpensePage">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="Name" 
                    Placeholder="Expense Name" 
                    HeightRequest="70"/>
            <Editor x:Name="Amount" 
                    Placeholder="Amount" 
                    HeightRequest="70"/>
            <Editor x:Name="Category"
                    Placeholder="Category"
                    HeightRequest="70"/>
            <DatePicker x:Name ="ExpenseDate" MinimumDate="01/01/2018"
            MaximumDate="12/31/2023"
            Date="3/28/2023" />
            
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Button Text="Save" Clicked="ExpenseSaveButtonClicked"/>
            <Button Text="Cancel" Grid.Column="1" Clicked="ExpenseCancelButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


